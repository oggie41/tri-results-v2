@page
@using TriResultsV2.Helpers
@model TriResultsV2.Pages.BikeModel
@{
    ViewData["Title"] = "Bike";
    ViewData["BannerCssClass"] = "tri-banner-img-bike";
}

<div id="div-bike-pbs" class="my-2">
    <h3><i class="@IconHelper.GetIconClass(NamedIcon.PersonalBest, IconOption.DuoTone)"></i> Personal Records</h3>
    <partial name="_EventResultsTable" model="Model.PersonalRecordsTable"/>
</div>
<div id="div-bike-results" class="my-2">
    <h3><i class="@IconHelper.GetIconClass(NamedIcon.Result, IconOption.DuoTone)"></i> Bike Results</h3>
    <div class="accordion accordion-flush">
        <partial name="_EventResultsAccordionItem" model="Model.BikeResults10MiAccordionItem"/>
        <partial name="_EventResultsAccordionItem" model="Model.BikeResults25MiAccordionItem"/>
    </div>
</div>