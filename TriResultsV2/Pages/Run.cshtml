@page
@model TriResultsV2.Pages.RunModel
@{
    ViewData["Title"] = "Run";
    ViewData["BannerCssClass"] = "tri-banner-img-run";
}

<div id="div-run-pbs" class="my-2">
    <h3><i class="fas fa-medal"></i> Personal Records</h3>
    <partial name="_EventResultsTable" model="Model.PersonalRecordsTable"/>
</div>
<div id="div-run-results" class="my-2">
    <h3><i class="fas fa-clipboard-list"></i> Run Results</h3>
    <div class="accordion accordion-flush">
        <partial name="_EventResultsAccordionItem" model="Model.RunResults5KAccordionItem"/>
        <partial name="_EventResultsAccordionItem" model="Model.RunResults10KAccordionItem"/>
        <partial name="_EventResultsAccordionItem" model="Model.RunResultsHmAccordionItem"/>
        <partial name="_EventResultsAccordionItem" model="Model.RunResultsMsrAccordionItem"/>
    </div>
</div>