<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Tri Results</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/tri-results.min.css" asp-append-version="true"/>

    <script src="https://kit.fontawesome.com/da48e6d6b6.js" crossorigin="anonymous"></script>
</head>
<body>
@*<body class="tri-brand-background tri-background-fixed">*@
<partial name="_Loading"/>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark border-bottom box-shadow py-2 mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="/images/general/tri-results-logo-800.png" alt="Tri Results" class="tri-logo" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item me-1">
                        <a class="nav-link text-light" asp-area="" asp-page="/Index"><i class="fas fa-clipboard-list"></i> Results</a>
                    </li>
                    <li class="nav-item me-1">
                        <a class="nav-link text-light" asp-area="" asp-page="/Swim"><i class="fas fa-swimmer"></i> Swim</a>
                    </li>
                    <li class="nav-item me-1">
                        <a class="nav-link text-light" asp-area="" asp-page="/Bike"><i class="fas fa-biking"></i> Bike</a>
                    </li>
                    <li class="nav-item me-1">
                        <a class="nav-link text-light" asp-area="" asp-page="/Run"><i class="fas fa-running"></i> Run</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/RaceDiary"><i class="far fa-calendar-alt"></i> Race Diary</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - David Ogle
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>